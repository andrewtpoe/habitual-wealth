  %img{ src: 'https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67', class: 'img-responsive pull-right', alt: 'Fork me on GitHub' }

%section.container-fluid
  .row
    .col-xs-10.col-xs-offset-1
      .home__signIn.center-block
        %image{ src:image_path('HW-logo.png'), class: 'img-responsive center-block logo__large'}
        %h1.home__title.text-center
          Habitual Wealth
        - if current_user
          .form-group
            %a{ href: app_path, class: 'btn btn-block btn-lg btn-primary' }
              Enter
          .form-group.text-center
            %a{ href: '/users/sign_out', data: { js: 'sign-out' } }
              Sign Out
        -else
          .collapse.in.form__expandable{ data: { js: 'sign-in-form' } }
            = form_tag api_log_in_path, method: :post, format: :json  do
              .form-group{ data: { js: 'warning' } }
              .form-group{ data: { js: 'email-group' } }
                = label_tag :email, 'Email', class: 'sr-only'
                = email_field_tag :email, nil, placeholder: 'email', class: 'form-control', autocomplete: 'off', data: { js: 'email' }
              .form-group{ data: { js: 'password-group' } }
                = label_tag :password, 'Password', class: 'sr-only'
                =password_field_tag :password, nil, placeholder: 'password', class: 'form-control', autocomplete: 'off', minlength: 8, data: { js: 'password' }
              .form-group
                %button{ class: 'btn btn-block btn-lg btn-primary', type: 'submit', data: { js: 'submit' } }
                  Sign In
            .form-group.text-center
              %a{ href: '#', data: { js: 'sign-up-link' } }
                Not a member? Sign up
          .collapse.form__expandable{ data: { js: 'sign-up-form' } }
            = form_tag api_sign_up_path, method: :post, format: :json do
              .form-group{ data: { js: 'warning' } }
              .form-group{ data: { js: 'email-group' } }
                = label_tag :email, 'Email', class: 'sr-only'
                = email_field_tag :email, nil, placeholder: 'email', class: 'form-control', autocomplete: 'off', data: { js: 'email' }
              %div{ data: { js: 'password-group' } }
                .form-group
                  = label_tag :password, 'Password', class: 'sr-only'
                  =password_field_tag :password, nil, placeholder: 'password', class: 'form-control', autocomplete: 'off', minlength: 8, data: { js: 'password' }
                .form-group
                  = label_tag :password_confirmation, 'Confirm password', class: 'sr-only'
                  =password_field_tag :password_confirmation, nil, placeholder: 'confirm password', class: 'form-control', autocomplete: 'off', minlength: 8, data: { js: 'password-confirmation' }
              .form-group
                %button{ class: 'btn btn-block btn-lg btn-primary', type: 'submit', data: { js: 'submit' } }
                  Sign Up
            .form-group.text-center
              %a{ href: '#', data: { js: 'sign-in-link' } }
                Already a member? Sign in



