%header{ class: 'navbar navbar-fixed-to-top' }
  .container-fluid
    .row
      .col-xs-3.col-xs-offset-9.no-padding
        %a{ href: 'https://github.com/poe-innovations-llc/habitual-wealth', class: 'overlay' }
          %img{ src: 'https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67', class: 'img-responsive pull-right', alt: 'Fork me on GitHub' }


%section{ class: 'container-fluid' }
  .row
    .col-xs-10.col-xs-offset-1
      .home__signup.center-block
        %image{ src:image_path('HW-logo.png'), class: 'img-responsive center-block logo__large'}
        %h1.home__title.text-center
          Habitual Wealth
        - if current_user
          %a{ href: app_path, class: 'btn btn-block btn-lg btn-primary' }
            Go To App
        -else
          = form_tag sign_up_path, method: :post do
            .form-group
              = label_tag :email, 'Email', class: 'sr-only'
              = email_field_tag :email, nil, placeholder: 'email', class: 'form-control', autocomplete: 'off'
            .form-group
              = label_tag :password, 'Password', class: 'sr-only'
              =password_field_tag :password, nil, placeholder: 'password', class: 'form-control', autocomplete: 'off', minlength: 8
            %button{ class: 'btn btn-block btn-lg btn-primary', type: 'submit' }
              Sign In

%footer{ class: 'navbar navbar-fixed-bottom' }
  .container-fluid
    .row
      .col-xs-10.col-xs-offset-1.text-center
        %p
          This is an open source project under active development.
